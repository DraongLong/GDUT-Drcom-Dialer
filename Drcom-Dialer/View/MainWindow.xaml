<Window x:Class="Drcom_Dialer.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drcom_Dialer.View"
        mc:Ignorable="d"
        Title="GDUT-DRCOM" Height="330" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="249" VerticalAlignment="Top" Width="272" Margin="10,10,0,0">
            <Image x:Name="image" Source="/Drcom-Dialer;component/Resource/banner.png"/>
            <StackPanel Height="30" Orientation="Horizontal" Margin="10,15,10,5">
                <Label x:Name="lbl_username" Content="账户:" VerticalAlignment="Center" Margin="10,0,10,0"/>
                <TextBox x:Name="tb_username" Width="180px" VerticalAlignment="Center" Margin="0,1,0,0" BorderThickness="0,0,0,1" />
            </StackPanel>
            <StackPanel Height="30" Orientation="Horizontal" Margin="10,0,10,5">
                <Label x:Name="lbl_password" Content="密码:" VerticalAlignment="Center"  Margin="10,0,10,0"/>
                <PasswordBox x:Name="pb_password" Width="180px" VerticalAlignment="Center" Margin="0,1,0,0" BorderThickness="0,0,0,1" />
            </StackPanel>
            <StackPanel Height="25" Orientation="Horizontal" Margin="10,0,10,5" HorizontalAlignment="Center">
                <CheckBox x:Name="cb_remember" Content="记住密码" VerticalAlignment="Center" Margin="30,0,30,0" Checked="cb_remember_Checked"/>
                <CheckBox x:Name="cb_autoLogin" Content="自动登录" VerticalAlignment="Center" Margin="30,0,30,0" Checked="cb_autoLogin_Checked" />
            </StackPanel>
            <StackPanel Height="25" Orientation="Horizontal" Margin="10,0,10,5" HorizontalAlignment="Center" Visibility="Hidden">
                <CheckBox x:Name="cb_startup" Content="开机启动" VerticalAlignment="Center" Margin="30,0,30,0" />
                <CheckBox x:Name="cb_redial" Content="断线重连" VerticalAlignment="Center" Margin="30,0,30,0" />
            </StackPanel>
            <StackPanel Height="30" Orientation="Horizontal" Margin="10,0,10,5" HorizontalAlignment="Center">
                <Button x:Name="btn_dial" Content="拨号" Width="150" Click="btn_dial_Click"/>

            </StackPanel>
        </StackPanel>
        <StatusBar Height="30" VerticalAlignment="Bottom" Margin="0">
            <Label x:Name="lbl_status" Content="这是状态栏"/>
        </StatusBar>

    </Grid>
</Window>
