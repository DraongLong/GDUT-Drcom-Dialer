<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:local="clr-namespace:Drcom_Dialer.View.Controls"
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Drcom_Dialer.View.Controls.HintPassBox"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="180">
    <Grid>
        <PasswordBox x:Name="pb_password" Margin="0,1,0,0"
                        Controls:TextBoxHelper.Watermark="{Binding Path=HintPasswordModel.Watermark}"
                        BorderThickness="0,0,0,1"
                        VerticalAlignment="Center"   
                             />
        <TextBox x:Name="tb_text" Margin="0,1,0,0" Visibility="Hidden"
                 BorderThickness="0,0,0,1"
                 VerticalAlignment="Center"   
                 />
        <Image x:Name="btn_see" Margin="-30,0,0,1" Width="30px" 
                HorizontalAlignment="Right" 
                MouseDown="btn_see_MouseDown" MouseUp="btn_see_MouseUp" MouseLeave="btn_see_MouseLeave" Source="/Drcom-Dialer;component/Resource/Show.ico"/>
    </Grid>
</UserControl>
